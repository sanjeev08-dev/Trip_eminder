<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PermissionsFragment"
    android:background="@drawable/splash_screen_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="50dp">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enable both permissions"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/requestFineLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/success_bg"
            android:text="Enable FINE_LOCATION_PERMISSION"
            android:textAllCaps="false"
            android:paddingHorizontal="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/requestCoarseLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/success_bg"
            android:text="Enable COARSE_LOCATION_PERMISSION"
            android:textAllCaps="false"
            android:paddingHorizontal="10dp"/>
    </LinearLayout>
</RelativeLayout>